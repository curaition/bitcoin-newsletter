{
  "python": {
    "version": "3.11",
    "manager": "uv"
  },
  "build": {
    "commands": [
      "uv sync --frozen --no-dev",
      "uv run alembic upgrade head"
    ]
  },
  "start": {
    "cmd": "uv run uvicorn crypto_newsletter.web.main:app --host 0.0.0.0 --port $PORT"
  },
  "environment": {
    "PYTHONFAULTHANDLER": "1",
    "PYTHONUNBUFFERED": "1", 
    "PYTHONDONTWRITEBYTECODE": "1",
    "UV_SYSTEM_PYTHON": "1",
    "PYTHONPATH": "/app/src"
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 100
  }
}
