{
  "$schema": "https://schema.railpack.com",
  "python": {
    "version": "3.11",
    "manager": "uv"
  },
  "build": {
    "commands": [
      "uv sync --frozen",
      "uv run alembic upgrade head"
    ]
  },
  "deploy": {
    "startCommand": "./start.sh",
    "variables": {
      "PYTHONFAULTHANDLER": "1",
      "PYTHONUNBUFFERED": "1", 
      "PYTHONDONTWRITEBYTECODE": "1",
      "UV_SYSTEM_PYTHON": "1",
      "PYTHONPATH": "/app/src"
    }
  }
}
